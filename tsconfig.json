{
  "compilerOptions": {
    "rootDirs": ["src", "tests"],
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2022",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "incremental": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@/tests/*": ["../tests/*"],
      "@/*": ["*"]
    },
  }
}